<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DividerCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="text_price">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="text_currency">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/currency_bottom</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_recurrence">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Splash -->
    <style name="splash" parent="Theme.Dues">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Buttons -->
    <style name="button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor_Button</item>
        <item name="android:backgroundTint">@color/backgroundTint_Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="button_selection">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/textColor_Button</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Text -->
    <style name="text">
        <item name="android:textColor">@color/textColor_Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Fab Button -->
    <style name="fab_button" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/fab_button_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- TextInputOuterField -->
    <style name="textInputOuterField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:strokeColor">@color/boxStrokeColor_TextInputOuterField</item>
        <item name="android:textColorHint">@color/hintTextColor_TextInputOuterField</item>
    </style>

    <!-- TextInputInnerField -->
    <style name="textInputInnerField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor_TextInputInnerField</item>
        <item name="android:textColorHint">@color/textColorHint_TextInputInnerField</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="nav_header_logo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:tint">@color/textColor_Text</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
    </style>
</resources>